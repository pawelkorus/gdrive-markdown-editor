{
    "compilerOptions": {
        "outDir": "target/",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "ES2018",
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "es2020",
        "importHelpers": true,
        "downlevelIteration": true,
        "types": [
            "gapi",
            "gapi.client.drive-v3",
            "google.accounts",
            "google.picker"
        ],
        "lib": [
            "es2019",
            "dom"
        ],
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "target",
        "test"
    ]
}
